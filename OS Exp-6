#include <stdio.h>

struct Process {
    int pid;
    int burst;
    int priority;
    int remaining;
    int waiting;
    int turnaround;
};

int main() {
    int n, completed = 0, t = 0, i, highest;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    // Input
    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("Enter Burst Time for P%d: ", i + 1);
        scanf("%d", &p[i].burst);

        printf("Enter Priority for P%d (1 = highest): ", i + 1);
        scanf("%d", &p[i].priority);

        p[i].remaining = p[i].burst;
        p[i].waiting = 0;
        p[i].turnaround = 0;
    }

    // Pre-emptive Priority Scheduling
    while (completed < n) {
        highest = -1;

        // Find the highest priority process (remaining > 0)
        for (i = 0; i < n; i++) {
            if (p[i].remaining > 0) {
                if (highest == -1 || p[i].priority < p[highest].priority)
                    highest = i;
            }
        }

        // Execute for 1 time unit
        p[highest].remaining--;

        // If process completes
        if (p[highest].remaining == 0) {
            completed++;
            p[highest].turnaround = t + 1;
            p[highest].waiting = p[highest].turnaround - p[highest].burst;
        }

        t++; // Next time unit
    }

    // Output
    printf("\nPID\tBT\tPriority\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t\t%d\t%d\n",
               p[i].pid, p[i].burst, p[i].priority,
               p[i].waiting, p[i].turnaround);
    }

    return 0;
}
